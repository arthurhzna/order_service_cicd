{
    "info": {
      "name": "order-service (local)",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
      "description": "Collection untuk testing endpoint order-service (base: http://localhost:8004)"
    },
    "event": [
      {
        "listen": "prerequest",
        "script": {
          "type": "text/javascript",
          "exec": [
            "const signatureKey = pm.collectionVariables.get('signatureKey') || 'arthur';",
            "const serviceName = pm.collectionVariables.get('x_service_name') || 'order-service';",
            "const requestAt = Math.floor(Date.now() / 1000).toString();",
            "pm.collectionVariables.set('x_request_at', requestAt);",
            "const validateKey = serviceName + ':' + signatureKey + ':' + requestAt;",
            "const apiKey = CryptoJS.SHA256(validateKey).toString();",
            "pm.collectionVariables.set('x_api_key', apiKey);"
          ]
        }
      }
    ],
    "variable": [
      { "key": "base_url", "value": "http://localhost:8004" },
      { "key": "signatureKey", "value": "arthur" },
      { "key": "x_service_name", "value": "order-service" },
      { "key": "x_request_at", "value": "" },
      { "key": "x_api_key", "value": "" },
      { "key": "bearer_token", "value": "PLACEHOLDER_BEARER_TOKEN" }
    ],
    "item": [
      {
        "name": "Order",
        "item": [
          {
            "name": "GET /order (auth) - list (pagination)",
            "request": {
              "method": "GET",
              "header": [
                { "key": "Authorization", "value": "Bearer {{bearer_token}}" },
                { "key": "X-Service-Name", "value": "{{x_service_name}}" },
                { "key": "X-Request-At", "value": "{{x_request_at}}" },
                { "key": "X-Api-Key", "value": "{{x_api_key}}" }
              ],
              "url": {
                "raw": "{{base_url}}/api/v1/order?page=1&limit=10",
                "host": ["{{base_url}}"],
                "path": ["api", "v1", "order"],
                "query": [
                  { "key": "page", "value": "1" },
                  { "key": "limit", "value": "10" }
                ]
              }
            },
            "response": []
          },
          {
            "name": "GET /order/:uuid (auth)",
            "request": {
              "method": "GET",
              "header": [
                { "key": "Authorization", "value": "Bearer {{bearer_token}}" },
                { "key": "X-Service-Name", "value": "{{x_service_name}}" },
                { "key": "X-Request-At", "value": "{{x_request_at}}" },
                { "key": "X-Api-Key", "value": "{{x_api_key}}" }
              ],
              "url": {
                "raw": "{{base_url}}/api/v1/order/{{uuid}}",
                "host": ["{{base_url}}"],
                "path": ["api", "v1", "order", "{{uuid}}"]
              }
            },
            "response": []
          },
          {
            "name": "GET /order/user (auth)",
            "request": {
              "method": "GET",
              "header": [
                { "key": "Authorization", "value": "Bearer {{bearer_token}}" },
                { "key": "X-Service-Name", "value": "{{x_service_name}}" },
                { "key": "X-Request-At", "value": "{{x_request_at}}" },
                { "key": "X-Api-Key", "value": "{{x_api_key}}" }
              ],
              "url": {
                "raw": "{{base_url}}/api/v1/order/user",
                "host": ["{{base_url}}"],
                "path": ["api", "v1", "order", "user"]
              }
            },
            "response": []
          },
          {
            "name": "POST /order (auth) - create order",
            "request": {
              "method": "POST",
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Authorization", "value": "Bearer {{bearer_token}}" },
                { "key": "X-Service-Name", "value": "{{x_service_name}}" },
                { "key": "X-Request-At", "value": "{{x_request_at}}" },
                { "key": "X-Api-Key", "value": "{{x_api_key}}" }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"fieldScheduleIDs\": [\"<uuid>\", \"<uuid>\"],\n  \"amount\": 100000,\n  \"description\": \"Pembayaran lapangan\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/api/v1/order",
                "host": ["{{base_url}}"],
                "path": ["api", "v1", "order"]
              }
            },
            "response": []
          }
        ]
      }
    ]
  }